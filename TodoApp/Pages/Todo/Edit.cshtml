@page "{id:int?}"
@model TodoApp.Pages.Todo.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ToDos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ToDos.Id" />
            <div class="form-group">
                <label asp-for="ToDos.Description" class="control-label"></label>
                <input asp-for="ToDos.Description" class="form-control" />
                <span asp-validation-for="ToDos.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToDos.DueDate" class="control-label"></label>
                <input asp-for="ToDos.DueDate" class="form-control" />
                <span asp-validation-for="ToDos.DueDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToDos.Status" class="control-label"></label>
                <input asp-for="ToDos.Status" class="form-control" />
                <span asp-validation-for="ToDos.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
